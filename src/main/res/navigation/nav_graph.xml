<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.healthapp.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_BMRFragment"
            app:destination="@id/BMRFragment" />
        <action
            android:id="@+id/action_homeFragment_to_stepsFragment"
            app:destination="@id/stepsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_BMIFragment"
            app:destination="@id/BMIFragment" />
    </fragment>
    <fragment
        android:id="@+id/activityFragment"
        android:name="com.example.healthapp.ActivityFragment"
        android:label="fragment_activity"
        tools:layout="@layout/fragment_activity" />
    <fragment
        android:id="@+id/caloriesFragment"
        android:name="com.example.healthapp.CaloriesFragment"
        android:label="fragment_calories"
        tools:layout="@layout/fragment_calories" />
    <fragment
        android:id="@+id/BMIFragment"
        android:name="com.example.healthapp.BMIFragment"
        android:label="fragment_bmi"
        tools:layout="@layout/fragment_bmi" />
    <fragment
        android:id="@+id/BMRFragment"
        android:name="com.example.healthapp.BMRFragment"
        android:label="fragment_bmr"
        tools:layout="@layout/fragment_bmr" />
    <fragment
        android:id="@+id/stepsFragment"
        android:name="com.example.healthapp.StepsFragment"
        android:label="fragment_steps"
        tools:layout="@layout/fragment_steps" />
</navigation>